#include <iostream>
using namespace std;
int main(){
   int i;
   int j;
   int n;
   cin>>n;
   for(j=0;j<n;j++){
           cout<<"*";
       }
   cout<<endl;
   
    for(i=0;i<n-2;i++){
        for(j=0;j<=0;j++){
            cout<<"*";
        }
        for(j=1;j<=n-2;j++){
            cout<<" ";
        }
        for(j=n-1;j<=n-1;j++){
            cout<<"*";
        }
        cout<<endl;
    }
    
   for(j=0;j<n;j++){
           cout<<"*";
       }
    
  

    return 0;
}
