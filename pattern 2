#include <iostream>
using namespace std;
int main(){
    int i;
    int j;
    int n;
    int l;
    cin >> n;
    for(i=0;i<=n;i++){
        for(j=1;j<=i;j++){
            cout<<j;
            }
        
        for(j=0;j<=2*n-2-2*i;j++){
            cout<<" ";
        }
        
        for(j=i;j>0;j--){
            cout<<j;
            }
        cout<<endl;
        }
      
        
        
    
    


    return 0;
}
